@model BankAccount

<div class="banking-app-container">
    <label id="welcome-label">Welcome, John Smith!</label>
    <label id="account-label">Account:</label>
    <select id="account-select" disabled>
        <option value="1234" selected>1234</option>
    </select>
    <label id="balance-label">BALANCE:</label>
    <div id="balance-display">@Model.Balance.ToString("C") (CAD)</div>

    <form asp-action="ProcessTransaction" method="post">
        @if (ViewBag.ErrorMessage != null) {
            <p id="error-message" style="color:red">@ViewBag.ErrorMessage</p>
        }

        <label for="amount">Amount:</label>
        <input
            type="number"
            id="amount"
            name="amount"
            min="0"
            step="0.01"
            required />
        <select id="currency" name="currencyCode">
            <option value="CAD" selected>CAD</option>
            <option value="USD">USD</option>
            <option value="MXN">MXN</option>
            <option value="EURO">EURO</option>
        </select>

        <button
            id="btn-withdraw"
            type="submit"
            name="transactionType"
            value="Withdraw"
        >WITHDRAW</button>

        <button
            id="btn-deposit"
            type="submit"
            name="transactionType"
            value="Deposit"
        >DEPOSIT</button>
    </form>
</div>